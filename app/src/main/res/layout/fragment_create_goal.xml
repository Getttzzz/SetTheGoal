<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlackOpacity15"
    android:clickable="true"
    android:focusable="true">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mcvCreateGoalRoot"
        android:layout_width="320dp"
        android:layout_height="460dp"
        app:cardPreventCornerOverlap="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearance="@style/StyleCreateGoalCardView">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvSuggestions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="Suggestions:"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tilGoal" />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/mbUpdateSuggestions"
                style="?materialButtonOutlinedStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:text="Next step"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/chipSuggestionsGroup"
                tools:visibility="visible" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipSuggestionsGroup"
                android:layout_width="match_parent"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvSuggestions">

                <com.google.android.material.chip.Chip
                    app:shapeAppearance="@style/StyleCornerChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="opportunity to travel" />

                <com.google.android.material.chip.Chip
                    app:shapeAppearance="@style/StyleCornerChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="buy a course" />

                <com.google.android.material.chip.Chip
                    app:shapeAppearance="@style/StyleCornerChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="buy a car" />

                <com.google.android.material.chip.Chip
                    app:shapeAppearance="@style/StyleCornerChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="learn Spanish" />

                <com.google.android.material.chip.Chip
                    app:shapeAppearance="@style/StyleCornerChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="play the guitar" />

            </com.google.android.material.chip.ChipGroup>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilGoal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/write_your_goal_here"
                app:counterEnabled="false"
                app:counterMaxLength="300"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearance="@style/StyleCreateGoalEditText">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etGoal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="100dp"
                    android:maxLength="300"
                    android:maxLines="5"
                    app:shapeAppearance="@style/StyleCreateGoalEditText"
                    tools:text="" />
            </com.google.android.material.textfield.TextInputLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>