<set xmlns:android="http://schemas.android.com/apk/res/android">
    <rotate
        android:duration="100"
        android:fromDegrees="0"
        android:interpolator="@android:anim/decelerate_interpolator"
        android:pivotX="50%"
        android:pivotY="50%"
        android:toDegrees="7" />

    <rotate
        android:duration="100"
        android:fromDegrees="7"
        android:interpolator="@android:anim/decelerate_interpolator"
        android:pivotX="50%"
        android:pivotY="50%"
        android:startOffset="100"
        android:toDegrees="-7" />

    <rotate
        android:duration="100"
        android:fromDegrees="-7"
        android:interpolator="@android:anim/decelerate_interpolator"
        android:pivotX="50%"
        android:pivotY="50%"
        android:startOffset="200"
        android:toDegrees="7" />

    <rotate
        android:duration="100"
        android:fromDegrees="7"
        android:interpolator="@android:anim/decelerate_interpolator"
        android:pivotX="50%"
        android:pivotY="50%"
        android:startOffset="300"
        android:toDegrees="-7" />

    <rotate
        android:duration="100"
        android:fromDegrees="-7"
        android:interpolator="@android:anim/decelerate_interpolator"
        android:pivotX="50%"
        android:pivotY="50%"
        android:startOffset="400"
        android:toDegrees="0" />
</set>
